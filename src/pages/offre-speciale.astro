---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Offre Spéciale - SYSTÈME VIRAL 100K™ - Formation Complète"
    description="Offre limitée : Formation complète + Bonus exclusifs pour générer tes premiers 10K€/mois. Garantie 30 jours satisfait ou remboursé."
    canonical="/offre-speciale"
>
    <Header />

    <!-- Background effects -->
    <div class="gradient-bg"></div>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <div class="badge">
                        <div class="badge-icon">⚡</div>
                        <span class="badge-text"
                            >OFFRE SPÉCIALE LIMITÉE - 50% DE RÉDUCTION</span
                        >
                    </div>

                    <h1>
                        SYSTÈME VIRAL 100K™
                        <span class="gradient-text">FORMATION COMPLÈTE</span>
                    </h1>

                    <p class="hero-subtitle">
                        Le système exact pour générer tes premiers 10K€/mois
                        avec des vidéos d'une minute.
                    </p>

                    <div class="countdown-container">
                        <div class="countdown-label">
                            ⏰ Offre expire dans :
                        </div>
                        <div class="countdown-timer">
                            <span class="countdown-item">
                                <span class="countdown-number" id="days"
                                    >02</span
                                >
                                <span class="countdown-unit">j</span>
                            </span>
                            <span class="countdown-separator">:</span>
                            <span class="countdown-item">
                                <span class="countdown-number" id="hours"
                                    >14</span
                                >
                                <span class="countdown-unit">h</span>
                            </span>
                            <span class="countdown-separator">:</span>
                            <span class="countdown-item">
                                <span class="countdown-number" id="minutes"
                                    >35</span
                                >
                                <span class="countdown-unit">m</span>
                            </span>
                            <span class="countdown-separator">:</span>
                            <span class="countdown-item">
                                <span class="countdown-number" id="seconds"
                                    >22</span
                                >
                                <span class="countdown-unit">s</span>
                            </span>
                        </div>
                    </div>

                    <div class="cta-wrapper">
                        <button
                            class="cta-btn"
                            onclick="alert('Fonctionnalité à implémenter')"
                        >
                            ACCÉDER À L'OFFRE SPÉCIALE →
                        </button>
                    </div>

                    <div class="trust-points">
                        <div class="trust-item">
                            <span class="trust-check">✓</span>
                            <span>Accès immédiat</span>
                        </div>
                        <div class="trust-item">
                            <span class="trust-check">✓</span>
                            <span>Paiement 100% sécurisé</span>
                        </div>
                        <div class="trust-item">
                            <span class="trust-check">✓</span>
                            <span>Garantie 30 jours</span>
                        </div>
                    </div>

                    <div class="social-proof">
                        <div class="proof-item">
                            <div class="proof-number">2 847</div>
                            <div class="proof-label">Entrepreneurs formés</div>
                        </div>
                        <div class="proof-item">
                            <div class="proof-number">4.9/5</div>
                            <div class="proof-label">Note moyenne</div>
                        </div>
                        <div class="proof-item">
                            <div class="proof-number">98%</div>
                            <div class="proof-label">Taux de satisfaction</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Steps Section -->
        <section class="steps-section">
            <div class="container">
                <h2 class="section-title">Le système en 3 étapes</h2>

                <div class="steps-grid">
                    <div class="step-card">
                        <div class="step-image">
                            <img
                                src="/media/SV-etape-1.webp"
                                alt="Étape 1: Créer du contenu viral"
                            />
                        </div>
                        <div class="step-content">
                            <div class="step-number">1</div>
                            <h3 class="step-title">Créer du contenu viral</h3>
                            <p class="step-text">
                                Des vidéos d'une minute qui cartonnent.<br />
                                La formule exacte pour exploser sur tous les réseaux.<br
                                /><br />
                                <span class="promise-text"
                                    >→ 100K vues garanties en 30 jours</span
                                >
                            </p>
                        </div>
                    </div>

                    <div class="step-card">
                        <div class="step-image">
                            <img
                                src="/media/SV-etape-2.webp"
                                alt="Étape 2: Capturer les emails"
                            />
                        </div>
                        <div class="step-content">
                            <div class="step-number">2</div>
                            <h3 class="step-title">Capturer les emails</h3>
                            <p class="step-text">
                                Transforme chaque vue en contact qualifié.<br />
                                Le système tourne 24/7 en automatique.<br /><br
                                />
                                <span class="promise-text"
                                    >→ 1000 leads garantis en 60 jours</span
                                >
                            </p>
                        </div>
                    </div>

                    <div class="step-card">
                        <div class="step-image">
                            <img
                                src="/media/SV-etape-3.webp"
                                alt="Étape 3: Monétiser ta liste"
                            />
                        </div>
                        <div class="step-content">
                            <div class="step-number">3</div>
                            <h3 class="step-title">Monétiser ta liste</h3>
                            <p class="step-text">
                                Convertis ta liste en revenus récurrents.<br />
                                Affiliation ou produit propre, je te guide étape
                                par étape.<br /><br />
                                <span class="promise-text">
                                    → 10K€/mois en 90 jours<br />
                                    <span class="guarantee-text"
                                        >(2K€ minimum garanti)</span
                                    >
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Proof Section -->
        <section class="proof-section">
            <div class="container">
                <div class="proof-header">
                    <h2 class="section-title">
                        <span class="highlight">LA PREUVE IRRÉFUTABLE</span>
                        <br />
                        QUE ÇA MARCHE
                    </h2>
                    <p class="section-subtitle">
                        Voici exactement ce que vous allez recevoir quand vous
                        appliquez le SYSTÈME VIRAL 100K™
                    </p>
                </div>

                <div class="proof-content">
                    <!-- Image principale avec design Mockup -->
                    <div class="proof-image-showcase">
                        <div class="mockup-container">
                            <!-- Browser mockup frame -->
                            <div class="browser-mockup">
                                <div class="browser-header">
                                    <div class="browser-buttons">
                                        <span class="browser-button close"
                                        ></span>
                                        <span class="browser-button minimize"
                                        ></span>
                                        <span class="browser-button maximize"
                                        ></span>
                                    </div>
                                    <div class="browser-address">
                                        <span class="address-icon">🔒</span>
                                        <span class="address-text"
                                            >sonnycourt.com/ssr</span
                                        >
                                    </div>
                                </div>
                                <div class="browser-content">
                                    <img
                                        src="/media/preuve_systeme_viral.webp"
                                        alt="Preuve du système viral - Résultats concrets et mesurables"
                                        loading="lazy"
                                        class="proof-image-main"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Description en dessous -->
                    <div class="proof-description-below">
                        <div class="proof-header">
                            <div class="proof-badge">
                                <span class="badge-icon">✅</span>
                                <span class="badge-text"
                                    >RÉSULTATS GARANTIS</span
                                >
                            </div>
                            <h3 class="proof-subtitle">
                                Résultats réels, non retouchés
                            </h3>
                        </div>

                        <p class="proof-main-text">
                            <strong
                                >Cette capture d'écran n'est pas retouchée.</strong
                            >
                            C'est le résultat réel obtenu par un élève qui a suivi
                            le système à la lettre pendant seulement 30 jours.
                        </p>

                        <div class="proof-stats">
                            <div class="proof-stat">
                                <div class="stat-number">+1M</div>
                                <div class="stat-label">Vues organiques</div>
                                <div class="stat-description">
                                    sur vos contenus
                                </div>
                            </div>
                            <div class="proof-stat">
                                <div class="stat-number">+500</div>
                                <div class="stat-label">Leads qualifiés</div>
                                <div class="stat-description">
                                    dans votre liste
                                </div>
                            </div>
                            <div class="proof-stat">
                                <div class="stat-number">€10K+</div>
                                <div class="stat-label">Revenus mensuels</div>
                                <div class="stat-description">garantis</div>
                            </div>
                        </div>

                        <div class="proof-features">
                            <div class="feature-item">
                                <span class="feature-check">🎯</span>
                                <span class="feature-text">
                                    <strong>Stratégie éprouvée</strong> qui fonctionne
                                    sur tous les réseaux
                                </span>
                            </div>
                            <div class="feature-item">
                                <span class="feature-check">⚡</span>
                                <span class="feature-text">
                                    <strong>Méthode automatisée</strong> qui travaille
                                    24/7 pour vous
                                </span>
                            </div>
                            <div class="feature-item">
                                <span class="feature-check">💰</span>
                                <span class="feature-text">
                                    <strong>ROI garanti</strong> ou remboursement
                                    intégral
                                </span>
                            </div>
                        </div>

                        <div class="proof-cta">
                            <p class="proof-urgency">
                                <strong>Pourquoi attendre ?</strong> Commencez dès
                                aujourd'hui et obtenez les mêmes résultats.
                            </p>
                            <button
                                class="proof-btn"
                                onclick="alert('Fonctionnalité à implémenter')"
                            >
                                VOIR LA FORMATION COMPLÈTE →
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Case Study Section -->
        <section class="case-study-section">
            <div class="container">
                <div class="case-study-header">
                    <h2 class="section-title">
                        <span class="highlight">LES RÉSULTATS HALLUCINANTS</span
                        >
                        <br />
                        D'UN FORMAT COURT
                    </h2>
                    <p class="section-subtitle">
                        Voici ce que j'ai obtenu avec une seule vidéo de 60
                        secondes
                    </p>
                </div>

                <div class="case-study-image">
                    <div class="image-wrapper">
                        <img
                            src="/media/cas_etude-format_court.webp"
                            alt="Capture d'écran du format court viral - Résultats hallucinants"
                            loading="lazy"
                            class="case-study-img"
                        />
                        <div class="image-overlay">
                            <div class="play-button">
                                <span class="play-icon">▶</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="case-study-content">
                    <div class="case-study-stats">
                        <div class="stat-item">
                            <div class="stat-number">1,9 M</div>
                            <div class="stat-label">Vues sur Instagram</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">1,3 M</div>
                            <div class="stat-label">Vues sur Facebook</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">500 K</div>
                            <div class="stat-label">
                                Vues sur YouTube Shorts
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">416 K</div>
                            <div class="stat-label">Vues sur TikTok</div>
                        </div>
                    </div>

                    <div class="total-views-text">
                        <p>4,1 MILLIONS de vues totales</p>
                    </div>

                    <div class="case-study-total">
                        <div class="total-box">
                            <div class="total-number">12 000€ à 24 000€</div>
                            <div class="total-label">de revenus générés</div>
                            <div class="formula-breakdown">
                                <div class="formula-item">
                                    <span class="formula-number"
                                        >2 000 à 4 000</span
                                    >
                                    <span class="formula-text"
                                        >emails et numéros capturés</span
                                    >
                                </div>
                                <div class="formula-item">
                                    <span class="formula-number">× 3%</span>
                                    <span class="formula-text"
                                        >taux de conversion</span
                                    >
                                </div>
                                <div class="formula-item">
                                    <span class="formula-number">× 200€</span>
                                    <span class="formula-text"
                                        >prix de la formation</span
                                    >
                                </div>
                            </div>
                            <div class="total-subtext">
                                Pour 1 heure de travail seulement
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Target Audience Section -->
        <section class="target-audience-section">
            <div class="container">
                <div class="target-header">
                    <h2 class="section-title">
                        Cette formation est faite pour toi si tu es…
                    </h2>
                </div>

                <div class="target-grid">
                    <!-- Profile 1: L'Employé frustré -->
                    <div class="target-card">
                        <h3 class="target-title">L'Employé frustré</h3>
                        <div class="target-avatar">
                            <img
                                src="/media/Avatar_1_SV.webp"
                                alt="L'Employé frustré"
                                class="avatar-image"
                            />
                        </div>
                        <div class="target-content">
                            <ul class="target-list">
                                <li>
                                    Tu en as marre de vendre ton temps contre un
                                    salaire qui ne reflète pas ta vraie valeur.
                                </li>
                                <li>
                                    Chaque matin tu te lèves sans motivation,
                                    avec la boule au ventre.
                                </li>
                                <li>
                                    Tu rêves de dire adieu à ton boss et de
                                    reprendre le contrôle de ton temps.
                                </li>
                                <li>
                                    Tu sais que tu vaux plus que ton job actuel
                                    mais tu ne sais pas par où commencer.
                                </li>
                                <li>
                                    Tu veux bâtir un projet concret qui peut
                                    remplacer ton salaire (et bien plus).
                                </li>
                                <li>
                                    Tu veux enfin prouver à toi-même que la
                                    liberté n'est pas réservée aux autres.
                                </li>
                            </ul>
                            <div class="target-cta">
                                <button
                                    class="profile-btn"
                                    onclick="alert('Fonctionnalité à implémenter')"
                                >
                                    C'est pour moi ! →
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Profile 2: L'Influenceur fauché -->
                    <div class="target-card">
                        <h3 class="target-title">L'Influenceur fauché</h3>
                        <div class="target-avatar">
                            <img
                                src="/media/avatar_2_SV.webp"
                                alt="L'Influenceur fauché"
                                class="avatar-image"
                            />
                        </div>
                        <div class="target-content">
                            <ul class="target-list">
                                <li>
                                    Tu fais des vues, tu récoltes des likes,
                                    mais ton compte en banque reste
                                    désespérément vide.
                                </li>
                                <li>
                                    Tu es fatigué de poster sans voir un seul
                                    euro tomber.
                                </li>
                                <li>
                                    Tu veux transformer ton audience en clients
                                    réels, pas en simples spectateurs.
                                </li>
                                <li>
                                    Tu veux arrêter les petits partenariats mal
                                    payés et construire une vraie source de
                                    revenus.
                                </li>
                                <li>
                                    Tu veux un système automatique qui vend pour
                                    toi pendant que tu crées.
                                </li>
                                <li>
                                    Tu rêves de stabilité financière grâce à ton
                                    contenu (au lieu de galérer chaque mois).
                                </li>
                            </ul>
                            <div class="target-cta">
                                <button
                                    class="profile-btn"
                                    onclick="alert('Fonctionnalité à implémenter')"
                                >
                                    C'est pour moi ! →
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Profile 3: L'Entrepreneur invisible -->
                    <div class="target-card">
                        <h3 class="target-title">L'Entrepreneur invisible</h3>
                        <div class="target-avatar">
                            <img
                                src="/media/Avatar_3_SV.webp"
                                alt="L'Entrepreneur invisible"
                                class="avatar-image"
                            />
                        </div>
                        <div class="target-content">
                            <ul class="target-list">
                                <li>
                                    Tu as déjà un business, mais personne ne te
                                    remarque et tes clients se font rares.
                                </li>
                                <li>
                                    Tu as un bon produit ou service… mais
                                    personne n'en entend parler.
                                </li>
                                <li>
                                    Tes posts passent inaperçus, et tu te sens
                                    invisible sur les réseaux.
                                </li>
                                <li>
                                    Tu veux arrêter de courir après les clients
                                    et les attirer à toi.
                                </li>
                                <li>
                                    Tu veux scaler ton chiffre d'affaires à
                                    +10K€/mois sans t'épuiser.
                                </li>
                                <li>
                                    Tu veux enfin être vu, reconnu et payé à ta
                                    juste valeur.
                                </li>
                            </ul>
                            <div class="target-cta">
                                <button
                                    class="profile-btn"
                                    onclick="alert('Fonctionnalité à implémenter')"
                                >
                                    C'est pour moi ! →
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Success Calculator Section -->
        <section class="success-calculator-section">
            <div class="container">
                <div class="calculator-header">
                    <h2 class="section-title">
                        <span class="highlight">CALCULATEUR DE PROBABILITÉ</span
                        >
                        <br />
                        DE SUCCÈS
                    </h2>
                    <p class="section-subtitle">
                        Répondez à ces questions pour connaître vos chances de
                        réussir avec SYSTÈME VIRAL 100K™
                    </p>
                </div>

                <div class="calculator-container">
                    <div class="calculator-content">
                        <div class="progress-bar">
                            <div class="progress-fill" id="progress-fill"></div>
                        </div>
                        <div class="question-counter">
                            Question <span id="current-question">1</span> sur <span
                                id="total-questions">5</span
                            >
                        </div>

                        <div class="question-container" id="question-container">
                            <!-- Questions will be loaded here -->
                        </div>

                        <div class="navigation-buttons">
                            <button
                                class="nav-btn prev-btn"
                                id="prev-btn"
                                disabled
                            >
                                ← Précédent
                            </button>
                            <button class="nav-btn next-btn" id="next-btn">
                                Suivant →
                            </button>
                        </div>
                    </div>

                    <div
                        class="results-container"
                        id="results-container"
                        style="display: none;"
                    >
                        <div class="result-card">
                            <div class="result-header">
                                <h3>Votre Probabilité de Succès</h3>
                                <div
                                    class="result-percentage"
                                    id="result-percentage"
                                >
                                    0%
                                </div>
                            </div>
                            <div class="result-barometer">
                                <div class="barometer-container">
                                    <svg
                                        class="barometer-svg"
                                        viewBox="0 0 200 120"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <!-- Background arc -->
                                        <path
                                            d="M 20 100 A 80 80 0 0 1 180 100"
                                            fill="none"
                                            stroke="rgba(255, 255, 255, 0.1)"
                                            stroke-width="12"
                                            stroke-linecap="round"></path>
                                        <!-- Progress arc -->
                                        <path
                                            id="barometer-progress"
                                            d="M 20 100 A 80 80 0 0 1 180 100"
                                            fill="none"
                                            stroke="url(#barometer-gradient)"
                                            stroke-width="12"
                                            stroke-linecap="round"
                                            stroke-dasharray="251.2"
                                            stroke-dashoffset="251.2"
                                            style="transition: stroke-dashoffset 2s cubic-bezier(0.4, 0, 0.2, 1);"
                                        ></path>
                                        <!-- Gradient definition -->
                                        <defs>
                                            <linearGradient
                                                id="barometer-gradient"
                                                x1="0%"
                                                y1="0%"
                                                x2="100%"
                                                y2="0%"
                                            >
                                                <stop
                                                    offset="0%"
                                                    stop-color="#ff4757"></stop>
                                                <stop
                                                    offset="33%"
                                                    stop-color="#ffa726"></stop>
                                                <stop
                                                    offset="66%"
                                                    stop-color="#4caf50"></stop>
                                                <stop
                                                    offset="100%"
                                                    stop-color="#00d4aa"></stop>
                                            </linearGradient>
                                        </defs>
                                    </svg>
                                    <div class="barometer-center">
                                        <div
                                            class="barometer-percentage"
                                            id="barometer-percentage"
                                        >
                                            0%
                                        </div>
                                        <div class="barometer-label">
                                            Succès
                                        </div>
                                    </div>
                                    <div class="barometer-markers">
                                        <div class="marker low">Faible</div>
                                        <div class="marker medium">Moyen</div>
                                        <div class="marker high">Élevé</div>
                                        <div class="marker excellent">
                                            Excellent
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="result-message" id="result-message">
                            </div>
                            <div
                                class="result-recommendations"
                                id="result-recommendations"
                            >
                            </div>
                            <button class="result-cta" id="result-cta">
                                COMMENCER LA FORMATION →
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Guarantee Section -->
        <section class="guarantee-section">
            <div class="container">
                <div class="guarantee-header">
                    <h2 class="section-title">
                        <span class="highlight">GARANTIE TRIPLE</span>
                        <br />
                        ZÉRO RISQUE
                    </h2>
                    <p class="section-subtitle">
                        Vous ne prenez aucun risque avec SYSTÈME VIRAL 100K™
                    </p>
                </div>

                <div class="guarantee-grid">
                    <!-- Garantie #1 -->
                    <div class="guarantee-card">
                        <div class="guarantee-icon">
                            <img
                                src="/media/image_garantie_1.webp"
                                alt="Garantie Remboursement 30 jours"
                                class="guarantee-image"
                            />
                        </div>
                        <div class="guarantee-content">
                            <h3 class="guarantee-title">
                                <span class="highlight-number">Garantie #1</span
                                ><br />
                                Remboursement 30 jours
                            </h3>
                            <p class="guarantee-description">
                                Testez tout pendant 30 jours. Pas satisfait =
                                100% remboursé, sans question.
                            </p>
                        </div>
                        <div class="guarantee-badge">30 JOURS</div>
                    </div>

                    <!-- Garantie #2 -->
                    <div class="guarantee-card">
                        <div class="guarantee-icon">
                            <img
                                src="/media/image_garantie_2.webp"
                                alt="Garantie Résultats ou Remboursé"
                                class="guarantee-image"
                            />
                        </div>
                        <div class="guarantee-content">
                            <h3 class="guarantee-title">
                                <span class="highlight-number">Garantie #2</span
                                ><br />
                                Résultats ou Remboursé
