---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
    title="Offre Spéciale - SYSTÈME VIRAL 100K™ - Formation Complète"
    description="Offre limitée : Formation complète + Bonus exclusifs pour générer tes premiers 10K€/mois. Garantie 30 jours satisfait ou remboursé."
    canonical="/offre-speciale"
>
    <Header />

    <!-- Background effects -->
    <div class="gradient-bg"></div>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <div class="badge">
                        <div class="badge-icon">⚡</div>
                        <span class="badge-text"
                            >OFFRE SPÉCIALE LIMITÉE - 50% DE RÉDUCTION</span
                        >
                    </div>

                    <h1>
                        SYSTÈME VIRAL 100K™
                        <span class="gradient-text">FORMATION COMPLÈTE</span>
                    </h1>

                    <p class="hero-subtitle">
                        Le système exact pour générer tes premiers 10K€/mois
                        avec des vidéos d'une minute.
                    </p>

                    <div class="countdown-container">
                        <div class="countdown-label">
                            ⏰ Offre expire dans :
                        </div>
                        <div class="countdown-timer">
                            <span class="countdown-item">
                                <span class="countdown-number" id="days"
                                    >02</span
                                >
                                <span class="countdown-unit">j</span>
                            </span>
                            <span class="countdown-separator">:</span>
                            <span class="countdown-item">
                                <span class="countdown-number" id="hours"
                                    >14</span
                                >
                                <span class="countdown-unit">h</span>
                            </span>
                            <span class="countdown-separator">:</span>
                            <span class="countdown-item">
                                <span class="countdown-number" id="minutes"
                                    >35</span
                                >
                                <span class="countdown-unit">m</span>
                            </span>
                            <span class="countdown-separator">:</span>
                            <span class="countdown-item">
                                <span class="countdown-number" id="seconds"
                                    >22</span
                                >
                                <span class="countdown-unit">s</span>
                            </span>
                        </div>
                    </div>

                    <div class="cta-wrapper">
                        <button
                            class="cta-btn"
                            onclick="alert('Fonctionnalité à implémenter')"
                        >
                            ACCÉDER À L'OFFRE SPÉCIALE →
                        </button>
                    </div>

                    <div class="trust-points">
                        <div class="trust-item">
                            <span class="trust-check">✓</span>
                            <span>Accès immédiat</span>
                        </div>
                        <div class="trust-item">
                            <span class="trust-check">✓</span>
                            <span>Paiement 100% sécurisé</span>
                        </div>
                        <div class="trust-item">
                            <span class="trust-check">✓</span>
                            <span>Garantie 30 jours</span>
                        </div>
                    </div>

                    <div class="social-proof">
                        <div class="proof-item">
                            <div class="proof-number">2 847</div>
                            <div class="proof-label">Entrepreneurs formés</div>
                        </div>
                        <div class="proof-item">
                            <div class="proof-number">4.9/5</div>
                            <div class="proof-label">Note moyenne</div>
                        </div>
                        <div class="proof-item">
                            <div class="proof-number">98%</div>
                            <div class="proof-label">Taux de satisfaction</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Steps Section -->
        <section class="steps-section">
            <div class="container">
                <h2 class="section-title">Le système en 3 étapes</h2>

                <div class="steps-grid">
                    <div class="step-card">
                        <div class="step-image">
                            <img
                                src="/media/SV-etape-1.webp"
                                alt="Étape 1: Créer du contenu viral"
                            />
                        </div>
                        <div class="step-content">
                            <div class="step-number">1</div>
                            <h3 class="step-title">Créer du contenu viral</h3>
                            <p class="step-text">
                                Des vidéos d'une minute qui cartonnent.<br />
                                La formule exacte pour exploser sur tous les réseaux.<br
                                /><br />
                                <span class="promise-text"
                                    >→ 100K vues garanties en 30 jours</span
                                >
                            </p>
                        </div>
                    </div>

                    <div class="step-card">
                        <div class="step-image">
                            <img
                                src="/media/SV-etape-2.webp"
                                alt="Étape 2: Capturer les emails"
                            />
                        </div>
                        <div class="step-content">
                            <div class="step-number">2</div>
                            <h3 class="step-title">Capturer les emails</h3>
                            <p class="step-text">
                                Transforme chaque vue en contact qualifié.<br />
                                Le système tourne 24/7 en automatique.<br /><br
                                />
                                <span class="promise-text"
                                    >→ 1000 leads garantis en 60 jours</span
                                >
                            </p>
                        </div>
                    </div>

                    <div class="step-card">
                        <div class="step-image">
                            <img
                                src="/media/SV-etape-3.webp"
                                alt="Étape 3: Monétiser ta liste"
                            />
                        </div>
                        <div class="step-content">
                            <div class="step-number">3</div>
                            <h3 class="step-title">Monétiser ta liste</h3>
                            <p class="step-text">
                                Convertis ta liste en revenus récurrents.<br />
                                Affiliation ou produit propre, je te guide étape
                                par étape.<br /><br />
                                <span class="promise-text">
                                    → 10K€/mois en 90 jours<br />
                                    <span class="guarantee-text"
                                        >(2K€ minimum garanti)</span
                                    >
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Guarantee Section -->
        <section class="guarantee-section">
            <div class="container">
                <div class="guarantee-header">
                    <h2 class="section-title">
                        <span class="highlight">GARANTIE TRIPLE</span>
                        <br />
                        ZÉRO RISQUE
                    </h2>
                    <p class="section-subtitle">
                        Vous ne prenez aucun risque avec SYSTÈME VIRAL 100K™
                    </p>
                </div>

                <div class="guarantee-grid">
                    <!-- Garantie #1 -->
                    <div class="guarantee-card">
                        <div class="guarantee-icon">
                            <img
                                src="/media/image_garantie_1.webp"
                                alt="Garantie Remboursement 30 jours"
                                class="guarantee-image"
                            />
                        </div>
                        <div class="guarantee-content">
                            <h3 class="guarantee-title">
                                Garantie #1 : Remboursement 30 jours
                            </h3>
                            <p class="guarantee-description">
                                Testez tout pendant 30 jours. Pas satisfait =
                                100% remboursé, sans question.
                            </p>
                        </div>
                        <div class="guarantee-badge">30 JOURS</div>
                    </div>

                    <!-- Garantie #2 -->
                    <div class="guarantee-card">
                        <div class="guarantee-icon">
                            <img
                                src="/media/image_garantie_2.webp"
                                alt="Garantie Résultats ou Remboursé"
                                class="guarantee-image"
                            />
                        </div>
                        <div class="guarantee-content">
                            <h3 class="guarantee-title">
                                Garantie #2 : Résultats ou Remboursé
                            </h3>
                            <p class="guarantee-description">
                                Si vous n'atteignez pas 1 million de vues en 30
                                jours en suivant le système, je vous rembourse.
                            </p>
                        </div>
                        <div class="guarantee-badge">1M VUES</div>
                    </div>

                    <!-- Garantie #3 -->
                    <div class="guarantee-card">
                        <div class="guarantee-icon">
                            <img
                                src="/media/image_garantie_3.webp"
                                alt="Garantie ROI Garanti"
                                class="guarantee-image"
                            />
                        </div>
                        <div class="guarantee-content">
                            <h3 class="guarantee-title">
                                Garantie #3 : ROI Garanti
                            </h3>
                            <p class="guarantee-description">
                                Si vous ne rentabilisez pas votre investissement
                                en 90 jours, j'analyse ta stratégie et t'envoie
                                un email personnalisé pour t'aider à corriger ce
                                qui ne va pas.
                            </p>
                        </div>
                        <div class="guarantee-badge">90 JOURS</div>
                    </div>
                </div>

                <div class="guarantee-cta">
                    <div class="guarantee-trust">
                        <div class="trust-icon">🛡️</div>
                        <p class="trust-text">
                            <strong>Zero risque.</strong> Notre taux de satisfaction
                            client est de 97%. Vous êtes entre de bonnes mains.
                        </p>
                    </div>
                    <button
                        class="guarantee-btn"
                        onclick="alert('Fonctionnalité à implémenter')"
                    >
                        ACCÉDER À LA FORMATION SÉCURISÉE →
                    </button>
                </div>
            </div>
        </section>
    </main>

    <Footer />

    <!-- Chatbot IA Component -->
    <div id="chatbot-container">
        <!-- Chatbot Toggle Button -->
        <button id="chatbot-toggle" class="chatbot-toggle">
            <div class="chatbot-text">Besoin d'aide ?</div>
            <div class="chatbot-pulse"></div>
        </button>

        <!-- Chatbot Window -->
        <div id="chatbot-window" class="chatbot-window">
            <!-- Header -->
            <div class="chatbot-header">
                <div class="chatbot-avatar">
                    <div class="avatar-icon">🧠</div>
                </div>
                <div class="chatbot-info">
                    <div class="chatbot-name">Assistant IA</div>
                    <div class="chatbot-status">
                        <div class="status-dot"></div>
                        <span>En ligne</span>
                    </div>
                </div>
                <button id="chatbot-close" class="chatbot-close">×</button>
            </div>

            <!-- Messages Container -->
            <div id="chatbot-messages" class="chatbot-messages">
                <div class="message bot-message">
                    <div class="message-avatar">
                        <div class="avatar-icon-small">🧠</div>
                    </div>
                    <div class="message-content">
                        <div class="message-text">
                            Bonjour ! Je suis l'assistant IA de SYSTÈME VIRAL
                            100K™. Je peux répondre à toutes vos questions sur
                            la formation. Comment puis-je vous aider ?
                        </div>
                        <div class="message-time">à l'instant</div>
                    </div>
                </div>
            </div>

            <!-- Typing Indicator -->
            <div
                id="typing-indicator"
                class="typing-indicator"
                style="display: none;"
            >
                <div class="typing-avatar">
                    <div class="avatar-icon-small">🧠</div>
                </div>
                <div class="typing-dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>

            <!-- Input Area -->
            <div class="chatbot-input-area">
                <div class="input-container">
                    <input
                        type="text"
                        id="chatbot-input"
                        class="chatbot-input"
                        placeholder="Posez votre question..."
                        maxlength="500"
                    />
                    <button id="chatbot-send" class="chatbot-send">
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                        >
                            <path
                                d="M2 21L23 12L2 3V10L17 12L2 14V21Z"
                                fill="currentColor"></path>
                        </svg>
                    </button>
                </div>
                <div class="input-footer">
                    <span class="input-hint"
                        >Appuyez sur Entrée pour envoyer</span
                    >
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Hero Section */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 120px 0 80px;
            position: relative;
            z-index: 10;
            text-align: center;
        }

        .hero-content {
            width: 100%;
            max-width: 900px;
            margin: 0 auto;
        }

        .hero h1 {
            font-size: clamp(32px, 5vw, 56px);
            font-weight: 800;
            margin-bottom: 24px;
            line-height: 1.1;
            letter-spacing: -0.02em;
        }

        .gradient-text {
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-bright) 100%
            );
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: 20px;
            line-height: 1.6;
            margin-bottom: 32px;
            color: var(--text-secondary);
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .countdown-container {
            margin: 32px 0;
            padding: 24px;
            background: var(--bg-elevated);
            border: 1px solid var(--border);
            border-radius: 16px;
            display: inline-block;
        }

        .countdown-label {
            font-size: 14px;
            color: var(--text-secondary);
            margin-bottom: 12px;
            display: block;
        }

        .countdown-timer {
            display: flex;
            align-items: center;
            gap: 8px;
            font-variant-numeric: tabular-nums;
        }

        .countdown-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 50px;
        }

        .countdown-number {
            font-size: 28px;
            font-weight: 800;
            color: var(--accent);
            line-height: 1;
        }

        .countdown-unit {
            font-size: 12px;
            color: var(--text-muted);
            text-transform: uppercase;
            margin-top: 2px;
        }

        .countdown-separator {
            font-size: 24px;
            color: var(--text-muted);
            font-weight: 300;
        }

        .cta-wrapper {
            margin: 32px 0;
        }

        .cta-btn {
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-dark) 100%
            );
            color: var(--bg);
            border: none;
            padding: 18px 32px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 20px rgba(0, 220, 130, 0.3);
        }

        .cta-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(0, 220, 130, 0.4);
        }

        .trust-points {
            display: flex;
            justify-content: center;
            gap: 32px;
            margin: 40px 0;
            flex-wrap: wrap;
        }

        .trust-item {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--text-secondary);
            font-size: 14px;
        }

        .trust-check {
            color: var(--accent);
            font-weight: 700;
            font-size: 16px;
        }

        .social-proof {
            display: flex;
            justify-content: center;
            gap: 48px;
            margin-top: 60px;
            flex-wrap: wrap;
        }

        .proof-item {
            text-align: center;
        }

        .proof-number {
            font-size: clamp(24px, 3vw, 32px);
            font-weight: 800;
            color: var(--accent);
            margin-bottom: 4px;
        }

        .proof-label {
            font-size: 14px;
            color: var(--text-secondary);
        }

        /* Animations */
        @keyframes pulse {
            0%,
            100% {
                opacity: 1;
            }
            50% {
                opacity: 0.8;
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 32px;
            }

            .social-proof {
                gap: 24px;
            }

            .trust-points {
                flex-direction: column;
                gap: 16px;
            }
        }

        /* Chatbot Styles */
        #chatbot-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
            font-family: "Inter", system-ui, sans-serif;
        }

        .chatbot-toggle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-dark) 100%
            );
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 20px rgba(0, 220, 130, 0.4);
            transition: all 0.3s ease;
            position: relative;
        }

        .chatbot-toggle:hover {
            transform: scale(1.1);
            box-shadow: 0 8px 30px rgba(0, 220, 130, 0.6);
        }

        .chatbot-text {
            font-size: 11px;
            font-weight: 700;
            color: var(--bg);
            z-index: 2;
            position: relative;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            text-align: center;
            line-height: 1.2;
        }

        .chatbot-pulse {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 50%;
            background: rgba(0, 220, 130, 0.3);
            animation: chatbotPulse 2s ease-in-out infinite;
        }

        @keyframes chatbotPulse {
            0%,
            100% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.2);
                opacity: 0.7;
            }
        }

        .chatbot-window {
            position: absolute;
            bottom: 80px;
            right: 0;
            width: 350px;
            height: 500px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            display: flex;
            flex-direction: column;
            transform: translateY(20px) scale(0.95);
            opacity: 0;
            pointer-events: none;
            transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        .chatbot-window.show {
            transform: translateY(0) scale(1);
            opacity: 1;
            pointer-events: auto;
        }

        .chatbot-header {
            padding: 16px 20px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            gap: 12px;
            background: var(--bg-elevated);
            border-radius: 16px 16px 0 0;
        }

        .chatbot-avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-bright) 100%
            );
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .avatar-icon {
            font-size: 18px;
        }

        .chatbot-info {
            flex: 1;
        }

        .chatbot-name {
            font-weight: 600;
            color: var(--text);
            font-size: 14px;
        }

        .chatbot-status {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 12px;
            color: var(--text-secondary);
        }

        .status-dot {
            width: 6px;
            height: 6px;
            background: var(--accent);
            border-radius: 50%;
            animation: statusPulse 2s ease-in-out infinite;
        }

        @keyframes statusPulse {
            0%,
            100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .chatbot-close {
            width: 24px;
            height: 24px;
            background: none;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            transition: all 0.2s ease;
        }

        .chatbot-close:hover {
            background: var(--bg);
            color: var(--text);
        }

        .chatbot-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 16px;
        }

        .chatbot-messages::-webkit-scrollbar {
            width: 4px;
        }

        .chatbot-messages::-webkit-scrollbar-track {
            background: var(--bg-elevated);
        }

        .chatbot-messages::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 2px;
        }

        .message {
            display: flex;
            gap: 12px;
            animation: messageSlideIn 0.3s ease;
        }

        @keyframes messageSlideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .message-avatar {
            flex-shrink: 0;
        }

        .avatar-icon-small {
            width: 32px;
            height: 32px;
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-bright) 100%
            );
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
        }

        .bot-message .avatar-icon-small {
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-bright) 100%
            );
        }

        .user-message {
            flex-direction: row-reverse;
        }

        .user-message .message-content {
            align-items: flex-end;
        }

        .user-message .message-text {
            background: var(--accent);
            color: var(--bg);
        }

        .message-content {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .message-text {
            background: var(--bg-elevated);
            padding: 12px 16px;
            border-radius: 16px;
            font-size: 14px;
            line-height: 1.4;
            color: var(--text);
            max-width: 250px;
            word-wrap: break-word;
        }

        .message-time {
            font-size: 10px;
            color: var(--text-muted);
            padding: 0 4px;
        }

        .user-message .message-time {
            text-align: right;
        }

        .typing-indicator {
            display: flex;
            gap: 12px;
            padding: 20px;
            align-items: center;
        }

        .typing-dots {
            display: flex;
            gap: 4px;
        }

        .typing-dots span {
            width: 6px;
            height: 6px;
            background: var(--accent);
            border-radius: 50%;
            animation: typingDot 1.4s ease-in-out infinite;
        }

        .typing-dots span:nth-child(1) {
            animation-delay: 0s;
        }
        .typing-dots span:nth-child(2) {
            animation-delay: 0.2s;
        }
        .typing-dots span:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes typingDot {
            0%,
            60%,
            100% {
                transform: translateY(0);
                opacity: 0.4;
            }
            30% {
                transform: translateY(-10px);
                opacity: 1;
            }
        }

        .chatbot-input-area {
            border-top: 1px solid var(--border);
            background: var(--bg-elevated);
            border-radius: 0 0 16px 16px;
        }

        .input-container {
            display: flex;
            padding: 16px 20px;
            gap: 12px;
            align-items: center;
        }

        .chatbot-input {
            flex: 1;
            padding: 12px 16px;
            border: 1px solid var(--border);
