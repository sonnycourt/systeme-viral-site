---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
	title="Contact - Système Viral"
	description="Prends contact avec nous pour en savoir plus sur notre formation en marketing digital"
	canonical="/contact"
>
	<Header />
	
	<main class="min-h-screen bg-gray-50">
		<!-- Hero Section -->
		<section class="bg-white py-20">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
					Contact
				</h1>
				<p class="text-xl text-gray-600 max-w-3xl mx-auto">
					Prends contact avec nous pour en savoir plus
				</p>
			</div>
		</section>

		<!-- Content Section - À personnaliser -->
		<section class="py-16">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="bg-white rounded-lg shadow-lg p-8">
					<h2 class="text-2xl font-bold text-gray-900 mb-6">
						Informations de Contact
					</h2>
					<p class="text-gray-600 mb-4">
						Cette page est prête à être personnalisée avec Claude Opus 4.1.
					</p>
					<p class="text-gray-600">
						Tu peux ajouter ici un formulaire de contact, tes coordonnées, etc.
					</p>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
