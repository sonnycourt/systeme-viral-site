					</div>

					<div class="difficulty">
						<div class="difficulty-header">
							<div class="difficulty-label">Difficulté</div>
							<div class="difficulty-level">
								${createDifficultyBars(theme.difficulty)}
							</div>
						</div>
						<div class="difficulty-text">${theme.difficultyText}</div>
					</div>
				</div>
			`;
            }

            function renderCards() {
                const grid = document.getElementById("cardsGrid");
                if (!grid) {
                    console.error("Grid element not found!");
                    return;
                }

                grid.innerHTML = thematiques
                    .map((theme) => createCard(theme))
                    .join("");
            }

            function filterCards(filter, clickedButton) {
                // S'assurer que les cartes sont chargées
                const grid = document.getElementById("cardsGrid");
                if (!grid || grid.children.length === 0) {
                    renderCards();
                    setTimeout(() => filterCards(filter, clickedButton), 100);
                    return;
                }

                const cards = document.querySelectorAll(".card");
                const buttons = document.querySelectorAll(".filter-btn");

                // Retirer la classe active de tous les boutons
                buttons.forEach((btn) => btn.classList.remove("active"));

                // Ajouter la classe active au bouton cliqué
                if (clickedButton) {
                    clickedButton.classList.add("active");
                }

                // Appliquer les filtres
                cards.forEach((card) => {
                    card.style.display = "block";
                    card.classList.remove("pulse");

                    if (filter === "viral" && card.dataset.viral !== "true") {
                        card.style.display = "none";
                    } else if (
                        filter === "money" &&
                        card.dataset.money !== "true"
                    ) {
                        card.style.display = "none";
                    } else if (
                        filter === "easy" &&
                        card.dataset.easy !== "true"
                    ) {
                        card.style.display = "none";
                    }

                    if (card.style.display !== "none" && filter !== "all") {
                        setTimeout(() => card.classList.add("pulse"), 100);
                    }
                });
            }

            // Initial render avec délai pour s'assurer que tout est chargé
            setTimeout(() => {
                renderCards();

                // Initialiser le filtre "Toutes" par défaut après un délai
                setTimeout(() => {
                    const defaultButton =
                        document.querySelector(".filter-btn.active");
                    if (defaultButton) {
                        filterCards("all", defaultButton);
                    }
                }, 200);
            }, 100);

            // Ajouter les event listeners aux boutons de filtrage
            setTimeout(() => {
                const filterButtons = document.querySelectorAll(".filter-btn");
                filterButtons.forEach((button) => {
                    button.addEventListener("click", function (e) {
                        e.preventDefault();
                        const filterType =
                            this.getAttribute("data-filter") || "all";
                        filterCards(filterType, this);
                    });
                });
            }, 300);

            // Ajouter la classe au body pour les styles spécifiques
            document.body.classList.add("thematiques-active");
        </script>

