        <script>
            // Script de protection par mot de passe - côté client uniquement

            // Vérifier l'état d'authentification avant d'afficher le modal
            setTimeout(() => {
                // Ne pas afficher le modal si l'utilisateur est déjà authentifié
                if (document.body.classList.contains("auth-ok")) {
                    return;
                }

                // Afficher le modal seulement si non authentifié
                const modal = document.getElementById("password-modal");
                if (modal) {
                    modal.classList.add("open");
                }
            }, 100);

            const PASSWORD = "Viral100k!";
            const AUTH_KEY = "systeme_viral_auth";
            const AUTH_EXPIRY_KEY = "systeme_viral_auth_expiry";
            const AUTH_DURATION_DAYS = 30; // 30 jours

            function initPasswordProtection() {
                // Vérifier si déjà authentifié et non expiré
                const isAuthenticated =
                    localStorage.getItem(AUTH_KEY) === "true";
                const authExpiry = localStorage.getItem(AUTH_EXPIRY_KEY);

                if (isAuthenticated && authExpiry) {
                    const expiryDate = new Date(parseInt(authExpiry));
                    const now = new Date();

                    // Vérifier si l'authentification n'a pas expiré
                    if (now < expiryDate) {
                        document.body.classList.add("auth-ok");
                        return;
                    } else {
                        // Nettoyer les données expirées
                        localStorage.removeItem(AUTH_KEY);
                        localStorage.removeItem(AUTH_EXPIRY_KEY);
                    }
                }

                // Afficher le modal
                const modal = document.getElementById("password-modal");
                if (modal) {
                    modal.classList.add("open");
                    document.body.style.overflow = "hidden";
                }

                // Focus sur l'input
                setTimeout(() => {
                    const input = document.getElementById("password-input");
                    if (input) {
                        input.focus();
                    }
                }, 100);
            }

            function validatePassword() {
                const input = document.getElementById(
                    "password-input",
                ) as HTMLInputElement | null;
                const error = document.getElementById("password-error");
                if (!input) {
                    showError("Veuillez entrer un mot de passe");
                    return false;
                }
                const password = input.value.trim();

                if (!password) {
                    showError("Veuillez entrer un mot de passe");
                    return false;
                }

                if (password !== PASSWORD) {
                    showError("Mot de passe incorrect. Veuillez réessayer.");
                    input.value = "";
                    input.focus();
                    return false;
                }

                // Authentification réussie - sauvegarder avec expiration de 30 jours
                const expiryDate = new Date();
                expiryDate.setDate(expiryDate.getDate() + AUTH_DURATION_DAYS);

                localStorage.setItem(AUTH_KEY, "true");
                localStorage.setItem(
                    AUTH_EXPIRY_KEY,
                    expiryDate.getTime().toString(),
                );

                hidePasswordModal();
                return true;
            }

            function showError(message: string) {
                const error = document.getElementById("password-error");
                if (error) {
                    error.textContent = message;
                    error.classList.add("visible");

                    setTimeout(() => {
                        error.classList.remove("visible");
                    }, 3000);
                }
            }

            function hidePasswordModal() {
                const modal = document.getElementById(
                    "password-modal",
                ) as HTMLElement | null;
                const mainContent = document.querySelector(
                    ".thematiques-page",
                ) as HTMLElement | null;

                if (modal) {
                    modal.style.opacity = "0";
                    setTimeout(() => {
                        modal.classList.remove("open");
                        document.body.style.overflow = "";
                        document.body.classList.add("auth-ok");
                    }, 300);
                }

                if (mainContent) {
                    mainContent.style.display = "block";
                    mainContent.style.opacity = "0";
                    setTimeout(() => {
                        mainContent.style.opacity = "1";
                        mainContent.style.transition = "opacity 0.5s ease";
                    }, 100);
                }
            }

            // Attendre que le DOM soit chargé
            document.addEventListener("DOMContentLoaded", function () {
                // Event listener pour le toggle de la section info
                const infoHeader = document.getElementById("info-header");
                if (infoHeader) {
                    infoHeader.addEventListener("click", function() {
                        const content = document.getElementById("info-content");
                        const toggleIcon = document.querySelector(".toggle-icon");
                        
                        if (content && toggleIcon) {
                            content.classList.toggle("collapsed");
                            toggleIcon.classList.toggle("collapsed");
                        }
                    });
                }

                // Bouton de soumission
                const submitBtn = document.getElementById("password-submit");
                if (submitBtn) {
                    submitBtn.addEventListener("click", (e) => {
                        e.preventDefault();
                        validatePassword();
                    });
                }

                // Input - validation à l'appui d'Enter
                const input = document.getElementById(
                    "password-input",
                ) as HTMLInputElement | null;
                if (input) {
                    input.addEventListener("keypress", (e) => {
                        if (e.key === "Enter") {
                            e.preventDefault();
                            validatePassword();
                        }
                    });
                }

                // Initialiser la protection
                initPasswordProtection();
            });
        </script>
