            function createStars(rating) {
                let stars = "";
                for (let i = 1; i <= 5; i++) {
                    stars += `<div class="star ${i <= rating ? "filled" : ""}"></div>`;
                }
                return stars;
            }

            function createDifficultyBars(level) {
                let bars = "";
                for (let i = 1; i <= 5; i++) {
                    bars += `<div class="difficulty-bar ${i <= level ? "filled" : ""}"></div>`;
                }
                return bars;
            }

            function getCategory(theme) {
                if (theme.financial === 5) return "TOP RENTABILITÉ";
                if (theme.virality === 5) return "TOP VIRALITÉ";
                if (theme.difficulty <= 2) return "FACILE DÉBUT";
                return "STANDARD";
            }

            function createCard(theme) {
                const isViral = theme.virality === 5;
                const isMoney = theme.financial === 5;
                const isEasy = theme.difficulty <= 2;

                let indicator = "";
                if (isMoney) {
                    indicator = '<div class="indicator-money">€€€</div>';
                } else if (isViral) {
                    indicator = '<div class="indicator-viral">VIRAL</div>';
                }

                return `
				<div class="card" data-viral="${isViral}" data-money="${isMoney}" data-easy="${isEasy}">
					${indicator}
					<div class="category-badge">${getCategory(theme)}</div>

					<div class="card-header">
						<div class="card-number">${theme.id}</div>
						<div class="card-title">${theme.title}</div>
					</div>

					<p class="card-description">${theme.description}</p>

					<div class="metrics">
						<div class="metric">
							<div class="metric-label">Viralité</div>
							<div class="rating">
								<div class="stars">${createStars(theme.virality)}</div>
								<span class="rating-number">${theme.virality}/5</span>
							</div>
						</div>
						<div class="metric">
							<div class="metric-label">Potentiel €</div>
							<div class="rating">
								<div class="stars">${createStars(theme.financial)}</div>
								<span class="rating-number">${theme.financial}/5</span>
							</div>
						</div>
					</div>

					<div class="monetization">
						<div class="monetization-label">Monétisation</div>
						<div class="monetization-tags">
							${theme.monetization.map((m) => `<span class="tag">${m}</span>`).join("")}
						</div>
					</div>

					<div class="difficulty">
						<div class="difficulty-header">
							<div class="difficulty-label">Difficulté</div>
							<div class="difficulty-level">
								${createDifficultyBars(theme.difficulty)}
							</div>
						</div>
						<div class="difficulty-text">${theme.difficultyText}</div>
					</div>
				</div>
			`;
            }

            function renderCards() {
                const grid = document.getElementById("cardsGrid");
                if (!grid) {
                    console.error("Grid element not found!");
                    return;
                }

                grid.innerHTML = thematiques
                    .map((theme) => createCard(theme))
                    .join("");
            }

            function filterCards(filter, clickedButton) {
                // S'assurer que les cartes sont chargées
                const grid = document.getElementById("cardsGrid");
                if (!grid || grid.children.length === 0) {
                    renderCards();
                    setTimeout(() => filterCards(filter, clickedButton), 100);
                    return;
                }

                const cards = document.querySelectorAll(".card");
                const buttons = document.querySelectorAll(".filter-btn");

                // Retirer la classe active de tous les boutons
                buttons.forEach((btn) => btn.classList.remove("active"));

                // Ajouter la classe active au bouton cliqué
                if (clickedButton) {
                    clickedButton.classList.add("active");
                }

                // Appliquer les filtres
                cards.forEach((card) => {
                    card.style.display = "block";
                    card.classList.remove("pulse");

                    if (filter === "viral" && card.dataset.viral !== "true") {
                        card.style.display = "none";
                    } else if (
                        filter === "money" &&
                        card.dataset.money !== "true"
                    ) {
                        card.style.display = "none";
                    } else if (
                        filter === "easy" &&
                        card.dataset.easy !== "true"
                    ) {
                        card.style.display = "none";
                    }

                    if (card.style.display !== "none" && filter !== "all") {
                        setTimeout(() => card.classList.add("pulse"), 100);
                    }
                });
            }

            // Initial render avec délai pour s'assurer que tout est chargé
            setTimeout(() => {
                renderCards();

                // Initialiser le filtre "Toutes" par défaut après un délai
                setTimeout(() => {
                    const defaultButton =
                        document.querySelector(".filter-btn.active");
                    if (defaultButton) {
                        filterCards("all", defaultButton);
                    }

                    // Initialiser la recherche après que les cartes soient rendues
                    initSearchFunctionality();

                    // Initialiser l'analyseur IA
                    initAIAnalyzer();
                }, 200);
            }, 100);

            // Ajouter les event listeners aux boutons de filtrage
            setTimeout(() => {
                const filterButtons = document.querySelectorAll(".filter-btn");
                filterButtons.forEach((button) => {
                    button.addEventListener("click", function (e) {
                        e.preventDefault();
                        const filterType =
                            this.getAttribute("data-filter") || "all";
                        filterCards(filterType, this);
                    });
                });
            }, 300);

            // Fonction de recherche des thématiques
            function initSearchFunctionality() {
                const searchInput =
                    document.getElementById("thematiques-search");
                const resultsCount = document.getElementById(
                    "search-results-count",
                );
                const thematiquesCards = document.querySelectorAll(".card");

                if (!searchInput || !resultsCount || !thematiquesCards.length) {
                    console.warn(
                        "Search elements not found or no cards available",
                    );
                    return;
                }

                function filterThematiques(searchTerm) {
                    const term = searchTerm.toLowerCase().trim();
                    let visibleCount = 0;

                    thematiquesCards.forEach((card) => {
                        const title =
                            card.querySelector(".card-title")?.textContent ||
                            "";
                        const description =
                            card.querySelector(".card-description")
                                ?.textContent || "";

                        const searchableText =
                            `${title} ${description}`.toLowerCase();

                        if (searchableText.includes(term)) {
                            card.style.display = "block";
                            visibleCount++;
                        } else {
                            card.style.display = "none";
                        }
                    });

                    // Mettre à jour le compteur
                    const totalCount = 53; // Nombre affiché dans l'interface
                    if (term === "") {
                        resultsCount.textContent = `${totalCount} thématiques affichées`;
                    } else {
                        resultsCount.textContent = `${visibleCount} sur ${totalCount} thématiques`;
                    }

                    // Changer la couleur selon les résultats
                    if (term !== "" && visibleCount === 0) {
                        resultsCount.style.color = "#ff4757"; // Rouge si aucun résultat
                    } else {
                        resultsCount.style.color = "#01F38E"; // Vert sinon
                    }
                }

                // Écouter les changements de recherche
                searchInput.addEventListener("input", (e) => {
                    filterThematiques(e.target.value);
                });

                // Effacer la recherche avec Échap
                searchInput.addEventListener("keydown", (e) => {
                    if (e.key === "Escape") {
                        searchInput.value = "";
                        filterThematiques("");
                        searchInput.blur();
                    }
                });
            }

            // Fonction d'analyse IA des thématiques
            function initAIAnalyzer() {
                const input = document.getElementById("thematique-input");
                const analyzeBtn = document.getElementById("analyze-btn");
                const charCount = document.getElementById("char-count");
                const results = document.getElementById("ai-results");

                if (!input || !analyzeBtn || !charCount || !results) {
                    console.warn("AI analyzer elements not found");
                    return;
                }

                // Gestionnaire du compteur de caractères
                input.addEventListener("input", () => {
                    const count = input.value.length;
                    charCount.textContent = count;
                    analyzeBtn.disabled = count === 0;
                });

                // Gestionnaire du bouton d'analyse
                analyzeBtn.addEventListener("click", async () => {
                    const thematique = input.value.trim();
                    if (!thematique) return;

                    // Animation de chargement
                    analyzeBtn.disabled = true;
                    analyzeBtn.innerHTML = "⏳ Analyse en cours...";

                    try {
                        // Appel de la vraie fonction d'analyse IA
                        await analyzeThematique(thematique);
                    } catch (error) {
                        console.error("Erreur lors de l'analyse:", error);
                    } finally {
                        // Réactiver le bouton
                        analyzeBtn.disabled = false;
                        analyzeBtn.innerHTML = "🔍 Analyser ma thématique";
                    }
                });
            }

            // Fonction d'appel via la fonction Netlify (clé API sécurisée côté serveur)
            async function callClaudeAPI(thematique) {
                const resp = await fetch(
                    "/.netlify/functions/anthropic-analyze",
                    {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ thematique }),
                    },
                );
                if (!resp.ok) {
                    throw new Error(`Erreur API: ${resp.status}`);
                }
                const json = await resp.json();
                if (!json || !json.analysis) {
                    throw new Error("Format de réponse invalide");
                }
                return json.analysis;
            }

            // Fonction d'analyse avec Claude
            async function analyzeThematique(thematique) {
                const results = document.getElementById("ai-results");
                const viralStars = document.getElementById("viral-stars");
                const financeStars = document.getElementById("finance-stars");
                const difficultyBars =
                    document.getElementById("difficulty-bars");
                const insightsList = document.getElementById("insights-list");
                const monetizationTags =
                    document.getElementById("monetization-tags");

                try {
                    // Appeler l'API Claude
                    const analysis = await callClaudeAPI(thematique);

                    // Générer les étoiles virales
                    viralStars.innerHTML = createStars(analysis.viral_rating);
                    document.getElementById("viral-text").textContent =
                        analysis.viral_text;

                    // Générer les étoiles financières
                    financeStars.innerHTML = createStars(
                        analysis.finance_rating,
                    );
                    document.getElementById("finance-text").textContent =
                        analysis.finance_text;

                    // Générer les barres de difficulté
                    difficultyBars.innerHTML = createDifficultyBars(
                        analysis.difficulty_rating,
                    );
                    document.getElementById("difficulty-text").textContent =
                        analysis.difficulty_text;

                    // Générer les insights
                    const insights = analysis.insights || [];
                    insightsList.innerHTML = insights
                        .slice(0, 4) // Maximum 4 insights
                        .map(
                            (insight) =>
                                `<div class="insight-item">• ${insight}</div>`,
                        )
                        .join("");

                    // Générer les tags de monétisation
                    const monetization = analysis.monetization_methods || [];
                    monetizationTags.innerHTML = monetization
                        .slice(0, 6) // Maximum 6 tags
                        .map(
                            (tag) =>
                                `<span class="monetization-tag">${tag}</span>`,
                        )
                        .join("");

                    // Afficher les résultats
                    results.style.display = "block";
                    results.scrollIntoView({
                        behavior: "smooth",
