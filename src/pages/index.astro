---
import "../styles/global.css";

// Détecter si on est sur le sous-domaine dashboard
const isDashboardSubdomain = Astro.url.hostname === 'dashboard.systemeviral.com';

// Si on est sur le sous-domaine dashboard, rediriger vers /dashboard
if (isDashboardSubdomain) {
	return Astro.redirect('/dashboard');
}

const title = "Système Viral - En construction";
const description =
	"Site en cours de développement. Revenez bientôt découvrir notre méthode pour monétiser vos contenus courts.";
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<title>{title}</title>
		<meta name="description" content={description} />

		<!-- SEO Meta Tags -->
		<meta name="robots" content="noindex, nofollow" />
	</head>
	<body>
		<!-- Background effects -->
		<div class="gradient-bg"></div>

		<!-- Coming Soon Section -->
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<div class="badge">
						<div class="badge-icon"></div>
						<span class="badge-text">En construction</span>
					</div>

					<h1>
						Système Viral
						<span class="gradient-text">arrive bientôt</span>
					</h1>

					<p class="hero-subtitle">
						Nous travaillons dur pour vous offrir la meilleure
						méthode<br />
						pour monétiser vos contenus courts. Revenez très bientôt
						!
					</p>
				</div>
			</div>
		</section>
	</body>
</html>
