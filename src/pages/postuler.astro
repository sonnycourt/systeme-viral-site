---
import Layout from "../layouts/Layout.astro";

---

<Layout
    title="Postuler - SYSTÈME VIRAL 100K™"
    description="Postule pour réserver ta place à la prochaine ouverture du Système Viral 100K™."
    canonical="/postuler"
>
    <!-- intl-tel-input CSS -->
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/css/intlTelInput.css"
    />
    <!-- intl-tel-input JS -->
    <script
        src="https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/intlTelInput.min.js"
    ></script>
    <!-- Background effects -->
    <div class="gradient-bg"></div>

    <section class="postuler-hero">
        <div class="container">
            <div class="postuler-content">
                <div class="postuler-card">
                    <header class="postuler-header">
                        <div class="status-indicator">
                            <div class="status-badge">
                                <span class="status-dot"></span>
                                Black Friday - Ouverture prioritaire
                            </div>
                            <div class="status-text">
                                Ouverture inscription du 1 au 4 décembre — 72h seulement
                            </div>
                        </div>

                        <h1 class="postuler-title">
                            Postule pour rejoindre<br />
                            <span class="title-accent">SYSTÈME VIRAL 100K™</span>
                        </h1>

                        <div class="key-points">
                            <div class="key-point">
                                Places prioritaires pour les inscrits Black Friday
                            </div>
                            <div class="key-point">
                                Accès garanti le 1er décembre à 18h si sélectionné
                            </div>
                            <div class="key-point">
                                Complète ce formulaire pour être en tête de liste
                            </div>
                        </div>
                    </header>

                    <form id="postuler-form" class="postuler-form">
                        <div class="form-section">
                            <div class="input-group">
                                <label for="prenom" class="input-label">
                                    Ton prénom
                                </label>
                                <input
                                    id="prenom"
                                    type="text"
                                    name="prenom"
                                    required
                                    placeholder="Ton prénom"
                                    class="postuler-input"
                                />
                            </div>

                            <div class="input-group">
                                <label for="email" class="input-label">
                                    Ton meilleur email
                                </label>
                                <input
                                    id="email"
                                    type="email"
                                    name="email"
                                    required
                                    placeholder="ton@email.com"
                                    class="postuler-input"
                                />
                                <p class="input-help">
                                    Utilise ton vrai email — c’est ici que tu recevras la confirmation.
                                </p>
                            </div>

                            <div class="input-group">
                                <label for="telephone" class="input-label">
                                    Ton numéro WhatsApp / SMS
                                </label>
                                <input
                                    id="telephone"
                                    type="tel"
                                    name="telephone"
                                    required
                                    placeholder="06 12 34 56 78"
                                    class="postuler-input iti"
                                />
                                <p class="input-help">
                                    Sert uniquement à t’avertir lors de l’ouverture le 1er décembre.
                                </p>
                            </div>
                        </div>

                        <div class="form-section-card">
                            <div class="input-group">
                                <label for="profil" class="input-label">
                                    Tu es plutôt…
                                </label>
                                <select
                                    id="profil"
                                    name="profil"
                                    required
                                    class="postuler-select"
                                >
                                    <option value="" disabled selected>Choisis l’option qui te correspond</option>
                                    <option value="employe">Employé frustré</option>
                                    <option value="createur">Créateur / influenceur</option>
                                    <option value="entrepreneur">Entrepreneur invisible</option>
                                    <option value="reconversion">En reconversion</option>
                                    <option value="autre">Autre</option>
                                </select>
                            </div>

                            <div class="input-group">
                                <label for="objectif" class="input-label">
                                    Ton objectif principal
                                </label>
                                <select
                                    id="objectif"
                                    name="objectif"
                                    required
                                    class="postuler-select"
                                >
                                    <option value="" disabled selected>Quel résultat veux-tu atteindre ?</option>
                                    <option value="quitter-job">Quitter mon job</option>
                                    <option value="1000-5000">Générer 1 000 à 5 000€/mois</option>
                                    <option value="plus-10000">Générer +10 000€/mois</option>
                                    <option value="lancer-business">Lancer un business rentable</option>
                                    <option value="trouver-thematique">Trouver ma thématique</option>
                                    <option value="creer-systeme">Créer un système automatisé</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-section-card">
                            <div class="input-group">
                                <label for="motivation" class="input-label-range">
                                    <span>Niveau de motivation (1 à 10)</span>
                                    <span id="motivation-value" class="motivation-value">5</span>
                                </label>
                                <input
                                    id="motivation"
                                    type="range"
                                    name="motivation"
                                    min="1"
                                    max="10"
                                    value="5"
                                    required
                                    class="postuler-range"
                                />
                            </div>

                            <div class="input-group">
                                <label for="thematique" class="input-label">
                                    As-tu déjà une thématique ?
                                </label>
                                <select
                                    id="thematique"
                                    name="thematique"
                                    required
                                    class="postuler-select"
                                >
                                    <option value="" disabled selected>Réponds en toute transparence</option>
                                    <option value="oui">Oui</option>
                                    <option value="hesite">J'hésite</option>
                                    <option value="pas-encore">Pas encore</option>
                                </select>
                            </div>

                            <div class="input-group">
                                <label for="raison" class="input-label">
                                    Pourquoi veux-tu absolument rejoindre Système Viral maintenant ?
                                </label>
                                <textarea
                                    id="raison"
                                    name="raison"
                                    rows="2"
                                    required
                                    maxlength="240"
                                    placeholder="Réponse courte — une phrase suffit."
                                    class="postuler-textarea"
                                ></textarea>
                                <p class="input-help">
                                    Plus ta réponse est convaincante plus tu as de chance d'obtenir une place
                                </p>
                            </div>
                        </div>

                        <div class="submit-section">
                            <button
                                type="submit"
                                class="postuler-submit-btn"
                            >
                                POSTULER MAINTENANT
                            </button>
                            <p class="submit-disclaimer">
                                Tu seras prévenu en priorité le 1er décembre à 18h.<br />
                                Compléter ce formulaire ne garantit pas l’accès — les places sont limitées.
                            </p>
                            <div
                                id="postuler-feedback"
                                role="status"
                                aria-live="polite"
                                class="feedback-message"
                            ></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Postuler Page Styles - Inspired by comparison table */
        .postuler-hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 80px 0;
            position: relative;
            z-index: 10;
        }

        .postuler-content {
            width: 100%;
            max-width: 700px;
            margin: 0 auto;
        }

        .postuler-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 16px;
            padding: 30px;
            margin-bottom: 40px;
            overflow-x: auto;
        }

        .postuler-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .status-indicator {
            margin-bottom: 24px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 8px;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 6px 12px;
            background: rgba(1, 233, 136, 0.1);
            border: 1px solid rgba(1, 233, 136, 0.2);
            border-radius: 20px;
            color: #01e988;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-dot {
            width: 6px;
            height: 6px;
            background: #01e988;
            border-radius: 50%;
            margin-right: 6px;
            animation: gentle-pulse 3s ease-in-out infinite;
        }

        .status-text {
            font-size: 14px;
            color: #bfbfbf;
            font-weight: 500;
        }

        .postuler-title {
            font-size: 28px;
            font-weight: 700;
            color: #fff;
            margin: 0 0 24px;
            line-height: 1.2;
        }

        .title-accent {
            color: #01e988;
            display: block;
            margin-top: 4px;
        }

        .key-points {
            display: flex;
            flex-direction: column;
            gap: 8px;
            max-width: 500px;
            margin: 0 auto;
            text-align: center;
        }

        .key-point {
            font-size: 14px;
            color: #bfbfbf;
            line-height: 1.4;
            text-align: center;
        }

        @keyframes gentle-pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.6;
            }
        }

        .postuler-form {
            display: grid;
            gap: 24px;
        }

        .form-section {
            display: grid;
            gap: 16px;
        }

        .form-section-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 20px;
            display: grid;
            gap: 16px;
        }

        .section-title-accent {
            margin: 0;
            font-size: 14px;
            color: #01e988;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-weight: 600;
            text-align: center;
        }

        .input-group {
            display: grid;
            gap: 6px;
        }

        .input-label {
            display: block;
            font-size: 13px;
            font-weight: 600;
            color: #bfbfbf;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }

        .input-label-range {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            font-weight: 600;
            color: #bfbfbf;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }

        .motivation-value {
            font-size: 12px;
            color: #01e988;
            font-weight: 600;
            background: rgba(1, 233, 136, 0.1);
            padding: 2px 8px;
            border-radius: 12px;
            min-width: 20px;
            text-align: center;
        }

        .postuler-input,
        .postuler-select,
        .postuler-textarea {
            width: 100%;
            padding: 12px 16px;
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            font-size: 14px;
            font-family: inherit;
            transition: all 0.3s ease;
        }

        .postuler-input:focus,
        .postuler-select:focus,
        .postuler-textarea:focus {
            outline: none;
            border-color: #01e988;
            background: rgba(1, 233, 136, 0.05);
        }

        .postuler-input::placeholder,
        .postuler-textarea::placeholder {
            color: #666;
        }

        .postuler-range {
            width: 100%;
            height: 6px;
            border-radius: 3px;
            background: rgba(255, 255, 255, 0.1);
            outline: none;
            -webkit-appearance: none;
            appearance: none;
            cursor: pointer;
        }

        .postuler-range::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: #01e988;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(1, 233, 136, 0.3);
        }

        .postuler-range::-webkit-slider-thumb:hover {
            transform: scale(1.1);
        }

        .postuler-range::-moz-range-thumb {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: #01e988;
            cursor: pointer;
            border: none;
            box-shadow: 0 2px 8px rgba(1, 233, 136, 0.3);
        }

        .input-help {
            margin: 4px 0 0;
            font-size: 12px;
            color: #888;
            line-height: 1.4;
        }

        .submit-section {
            text-align: center;
            display: grid;
            gap: 16px;
        }

        .postuler-submit-btn {
            padding: 16px 32px;
            background: #01e988;
            border: none;
            border-radius: 8px;
            color: #000;
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .postuler-submit-btn:hover {
            background: #00dc82;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(1, 233, 136, 0.4);
        }

        .postuler-submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .submit-disclaimer {
            font-size: 13px;
            color: #bfbfbf;
            line-height: 1.5;
        }

        .feedback-message {
            text-align: center;
            font-size: 14px;
            font-weight: 600;
            color: #01e988;
        }

        /* intl-tel-input Styles */
        .iti {
            width: 100% !important;
            margin-bottom: 0 !important;
        }

        .iti input {
            width: 100% !important;
            padding: 12px 16px 12px 90px !important;
            background: rgba(255, 255, 255, 0.02) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            border-radius: 8px !important;
            color: #fff !important;
            font-size: 14px !important;
            font-family: inherit !important;
            transition: all 0.3s ease !important;
        }

        .iti input:focus {
            outline: none !important;
            border-color: #01e988 !important;
            background: rgba(1, 233, 136, 0.05) !important;
        }

        .iti input::placeholder {
            color: #666 !important;
        }

        /* Container du drapeau sélectionné */
        .iti .iti__selected-flag {
            background: rgba(255, 255, 255, 0.05) !important;
            border-right: 1px solid rgba(255, 255, 255, 0.1) !important;
            border-radius: 8px 0 0 8px !important;
            padding: 12px 8px !important;
            width: 85px !important;
            cursor: pointer !important;
            font-size: 14px !important;
        }

        .iti .iti__selected-flag:hover {
            background: rgba(1, 233, 136, 0.05) !important;
        }

        /* Flèche de la liste déroulante */
        .iti .iti__arrow {
            border-top: 4px solid #bfbfbf !important;
            border-left: 4px solid transparent !important;
            border-right: 4px solid transparent !important;
            margin-left: 4px !important;
        }

        /* Liste déroulante avec style sombre */
        .iti .iti__country-list {
            background: rgba(0, 0, 0, 0.95) !important;
            border: 1px solid rgba(255, 255, 255, 0.1) !important;
            border-radius: 8px !important;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5) !important;
            backdrop-filter: blur(10px) !important;
            -webkit-backdrop-filter: blur(10px) !important;
            z-index: 999999 !important;
            max-height: 200px !important;
            position: absolute !important;
            top: 100% !important;
            left: 0 !important;
            right: 0 !important;
            margin-top: 2px !important;
        }

        /* Pays dans la liste */
        .iti .iti__country {
            color: #fff !important;
            padding: 10px 12px !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05) !important;
            transition: all 0.3s ease !important;
        }

        .iti .iti__country:hover {
            background: rgba(1, 233, 136, 0.1) !important;
            color: #01e988 !important;
        }

        .iti .iti__country.iti__highlight {
            background: rgba(1, 233, 136, 0.15) !important;
            color: #01e988 !important;
        }

        /* Code du pays */
        .iti .iti__dial-code {
            color: #bfbfbf !important;
            font-weight: 300 !important;
        }

        /* Nom du pays */
        .iti .iti__country-name {
            color: inherit !important;
            font-weight: 400 !important;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .postuler-hero {
                padding: 40px 0;
            }

            .postuler-card {
                padding: 20px;
                margin-bottom: 20px;
            }

            .postuler-title {
                font-size: 24px;
            }

            .postuler-subtitle {
                font-size: 14px;
            }

            .form-section-card {
                padding: 16px;
            }

            .postuler-submit-btn {
                padding: 14px 24px;
                font-size: 13px;
            }
        }
    </style>
    <script type="module">
        // Initialize intl-tel-input
        const phoneInput = document.getElementById("telephone");
        if (phoneInput && typeof window.intlTelInput !== "undefined") {
            window.iti = window.intlTelInput(phoneInput, {
                initialCountry: "auto",
                geoIpLookup: function (callback) {
                    fetch("https://ipapi.co/json/")
                        .then((res) => res.json())
                        .then((data) => callback(data.country_code))
                        .catch(() => callback("fr"));
                },
                preferredCountries: ["fr", "ch", "be", "ca"],
                separateDialCode: true,
                utilsScript:
                    "https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/utils.js",
            });
        }

        const API_ENDPOINT = window.location.hostname === "localhost"
            ? "http://localhost:8888/.netlify/functions/postuler-submit"
            : "/.netlify/functions/postuler-submit";

        const form = document.getElementById("postuler-form");
        const feedback = document.getElementById("postuler-feedback");
        const submitButton = form?.querySelector("button[type='submit']");
        const motivationInput = document.getElementById("motivation");
        const motivationValue = document.getElementById("motivation-value");

        const setFeedback = (message, color = "#01e988") => {
            if (!feedback) return;
            feedback.textContent = message;
            feedback.style.color = color;
        };

        if (motivationInput && motivationValue) {
            motivationValue.textContent = motivationInput.value;
            motivationInput.addEventListener("input", () => {
                motivationValue.textContent = motivationInput.value;
            });
        }

        if (form) {
            form.addEventListener("submit", async (event) => {
                event.preventDefault();

                if (submitButton) {
                    submitButton.disabled = true;
                    submitButton.style.opacity = "0.7";
                    submitButton.style.cursor = "not-allowed";
                }

                setFeedback("Envoi en cours…");

                const formData = new FormData(form);
                const payload = {
                    prenom: (formData.get("prenom") ?? "").toString().trim(),
                    email: (formData.get("email") ?? "").toString().trim(),
                    telephone: (formData.get("telephone") ?? "").toString().trim(),
                    profil: (formData.get("profil") ?? "").toString(),
                    objectif: (formData.get("objectif") ?? "").toString(),
                    motivation: (formData.get("motivation") ?? "").toString(),
                    thematique: (formData.get("thematique") ?? "").toString(),
                    raison: (formData.get("raison") ?? "").toString().trim(),
                    utm: window?.UTMTracker?.get?.() ?? {},
                };

                try {
                    if (
                        !payload.prenom ||
                        !payload.email ||
                        !payload.telephone ||
                        !payload.profil ||
                        !payload.objectif ||
                        !payload.motivation ||
                        !payload.thematique ||
                        !payload.raison
                    ) {
                        throw new Error("missing-fields");
                    }

                    const response = await fetch(API_ENDPOINT, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                        },
                        body: JSON.stringify(payload),
                    });

                    const result = await response.json().catch(() => ({}));

                    if (!response.ok || result?.success !== true) {
                        throw new Error(result?.error || "submit-failed");
                    }

                    form.reset();

                    if (motivationInput) {
                        motivationInput.value = "5";
                    }

                    if (motivationValue) {
                        motivationValue.textContent = "5";
                    }

                    setFeedback("Candidature envoyée ! Tu recevras une confirmation le 1er décembre.");
                } catch (error) {
                    console.error("[Postuler] submission error", error);
                    const fallbackMessage =
                        error instanceof Error && error.message === "missing-fields"
                            ? "Merci de remplir tous les champs avant d'envoyer."
                            : "Oups… l'envoi a échoué. Réessaie dans un instant ou contacte l'équipe.";

                    setFeedback(fallbackMessage, "#ff6b6b");
                } finally {
                    if (submitButton) {
                        submitButton.disabled = false;
                        submitButton.style.opacity = "1";
                        submitButton.style.cursor = "pointer";
                    }
                }
            });
        }
    </script>
</Layout>
