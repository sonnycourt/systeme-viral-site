<script>
    // Minimal custom video controls (matching 100k-masterclass behavior)
    const felVideo = document.getElementById(
        "felVideo",
    ) as HTMLVideoElement | null;
    const felWrapper = document.getElementById(
        "felWrapper",
    ) as HTMLElement | null;
    const felBigPlay = document.getElementById(
        "felBigPlay",
    ) as HTMLButtonElement | null;
    const felPlayPause = document.getElementById(
        "felPlayPause",
    ) as HTMLButtonElement | null;
    const felVolume = document.getElementById(
        "felVolume",
    ) as HTMLInputElement | null;
    const felProgress = document.getElementById(
        "felProgress",
    ) as HTMLInputElement | null;
    const felTime = document.getElementById("felTime") as HTMLElement | null;

    if (felVideo) {
        felVideo.removeAttribute("controls");

        function setPlayingState(isPlaying: boolean) {
            if (!felWrapper) return;
            if (isPlaying) {
                felWrapper.classList.add("is-playing");
                felBigPlay && felBigPlay.classList.add("hidden");
            } else {
                felWrapper.classList.remove("is-playing");
                felBigPlay && felBigPlay.classList.remove("hidden");
            }
        }

        function togglePlay() {
            if (!felVideo) return;
            if (felVideo.paused) {
                void felVideo.play();
            } else {
                felVideo.pause();
            }
        }

        felBigPlay && felBigPlay.addEventListener("click", togglePlay);
        felPlayPause && felPlayPause.addEventListener("click", togglePlay);
        felVideo.addEventListener("click", togglePlay);
        felVideo.addEventListener("play", () => setPlayingState(true));
        felVideo.addEventListener("pause", () => setPlayingState(false));

        function formatTime(seconds: number): string {
            const m = Math.floor(seconds / 60);
            const s = Math.floor(seconds % 60);
            return `${m}:${s.toString().padStart(2, "0")}`;
        }

        function updateProgressUI() {
            if (!felVideo) return;
            const current = felVideo.currentTime || 0;
            const total = felVideo.duration || 0;
            if (felProgress && total > 0) {
                const percent = (current / total) * 100;
                felProgress.value = percent.toString();
            }
            if (felTime) {
                const left = isFinite(total) && total > 0 ? total : 0;
                felTime.textContent = `${formatTime(current)} / ${formatTime(left)}`;
            }
        }

        felVideo.addEventListener("timeupdate", updateProgressUI);
        felVideo.addEventListener("loadedmetadata", updateProgressUI);

        felProgress &&
            felProgress.addEventListener("input", (e: Event) => {
                if (!felVideo) return;
                const target = e.target as HTMLInputElement | null;
                const percent = target ? parseFloat(target.value) : NaN;
                if (
                    !isNaN(percent) &&
                    isFinite(felVideo.duration) &&
                    felVideo.duration > 0
                ) {
                    felVideo.currentTime = (percent / 100) * felVideo.duration;
                }
            });

        felVolume &&
            felVolume.addEventListener("input", (e: Event) => {
                const target = e.target as HTMLInputElement | null;
                const value = target ? parseFloat(target.value) : NaN;
                if (!isNaN(value) && felVideo) {
                    felVideo.volume = value;
                }
            });
    }
</script>
