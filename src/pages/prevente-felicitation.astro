    <style>
        /* Variables CSS identiques à la page 100k-masterclass */
        :root {
            --bg: #0a0a0a;
            --bg-card: rgba(255, 255, 255, 0.02);
            --bg-elevated: rgba(255, 255, 255, 0.05);
            --text: #ffffff;
            --text-secondary: #aaa;
            --text-muted: #888;
            --accent: #00dc82;
            --accent-bright: #00f593;
            --accent-glow: #00dc82;
            --accent-dark: #00b86b;
            --success: #00dc82;
            --border: rgba(255, 255, 255, 0.1);
            --glow: rgba(0, 220, 130, 0.3);
            --danger: #ef4444;
        }
        /* Import base styles from offre-speciale */
        .gradient-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                    circle at 20% 80%,
                    rgba(1, 233, 136, 0.1) 0%,
                    transparent 50%
                ),
                radial-gradient(
                    circle at 80% 20%,
                    rgba(1, 233, 136, 0.1) 0%,
                    transparent 50%
                ),
                radial-gradient(
                    circle at 40% 40%,
                    rgba(1, 233, 136, 0.05) 0%,
                    transparent 50%
                );
            z-index: -1;
            pointer-events: none;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Hero Section */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
            padding: 120px 0;
        }

        .hero-content {
            text-align: center;
            max-width: 800px;
            margin: 0 auto;
        }

        .hero h1 {
            font-size: clamp(32px, 6vw, 64px);
            font-weight: 900;
            line-height: 1.1;
            margin-bottom: 24px;
            color: white;
            text-transform: uppercase;
            letter-spacing: -0.02em;
        }

        .gradient-text {
            background: linear-gradient(135deg, #01e988 0%, #00f5b4 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero-subtitle {
            font-size: clamp(18px, 2.5vw, 24px);
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.4;
            margin-bottom: 60px;
            font-weight: 500;
        }

        /* Video Placeholder Section */
        .video-placeholder-section {
            margin: 60px 0;
        }

        .video-placeholder-container {
            margin-bottom: 60px;
        }

        .video-wrapper {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            overflow: hidden;
            position: relative;
            width: 100%;
            aspect-ratio: 16/9;
            margin: 0 auto;
        }

        .video-wrapper video {
            width: 100%;
            height: 100%;
            display: block;
            background: #000;
        }

        .big-play {
            position: absolute;
            inset: 0;
            margin: auto;
            width: 72px;
            height: 72px;
            border-radius: 50%;
            background: radial-gradient(
                closest-side,
                var(--accent),
                var(--accent-dark)
            );
            color: #0a0a0a;
            display: grid;
            place-items: center;
            border: 1px solid var(--border);
            box-shadow:
                0 0 0 6px rgba(0, 220, 130, 0.15),
                0 10px 30px rgba(0, 0, 0, 0.4);
            cursor: pointer;
            transition:
                transform 0.15s ease,
                box-shadow 0.15s ease;
            z-index: 5;
        }
        .big-play:hover {
            transform: scale(1.04);
            box-shadow:
                0 0 0 8px rgba(0, 220, 130, 0.18),
                0 12px 36px rgba(0, 0, 0, 0.45);
        }
        .big-play.hidden {
            display: none;
        }
        .big-play svg {
            transform: translateX(1px);
            pointer-events: none;
        }

        .custom-controls {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            background: linear-gradient(
                to top,
                rgba(10, 10, 10, 0.9),
                rgba(10, 10, 10, 0.3) 60%,
                rgba(10, 10, 10, 0)
            );
            border-top: none;
            z-index: 6;
        }
        .time-display {
            color: var(--text-secondary);
            font-size: 12px;
            min-width: 92px;
            text-align: center;
        }
        .progress {
            flex: 1;
            appearance: none;
            height: 6px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 999px;
            cursor: pointer;
        }
        .progress::-webkit-slider-thumb {
            appearance: none;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: var(--accent);
            box-shadow: 0 0 0 4px rgba(0, 220, 130, 0.18);
            border: none;
        }
        .progress::-moz-range-thumb {
            width: 14px;
            height: 14px;
            border: none;
            border-radius: 50%;
            background: var(--accent);
        }
        .control-btn {
            color: var(--text);
            background: transparent;
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 8px;
            display: grid;
            place-items: center;
            cursor: pointer;
        }
        .control-btn:hover {
            color: var(--accent);
            border-color: rgba(0, 220, 130, 0.4);
        }
        .control-btn .icon-pause {
            display: none;
        }
        .is-playing .control-btn.play .icon-play {
            display: none;
        }
        .is-playing .control-btn.play .icon-pause {
            display: block;
        }

        .volume {
            width: 90px;
            appearance: none;
            height: 6px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 999px;
            cursor: pointer;
        }
        .volume::-webkit-slider-thumb {
            appearance: none;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            background: var(--accent);
            box-shadow: 0 0 0 4px rgba(0, 220, 130, 0.18);
            border: none;
        }
        .volume::-moz-range-thumb {
            width: 14px;
            height: 14px;
            border: none;
            border-radius: 50%;
            background: var(--accent);
        }

        /* Video Description */
        .video-description {
            max-width: 900px;
            margin: 0 auto;
        }

        .description-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .description-header h3 {
            font-size: clamp(24px, 3vw, 36px);
            font-weight: 800;
            color: white;
            margin-bottom: 16px;
        }

        .description-subtitle {
            font-size: 18px;
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.6;
            max-width: 700px;
            margin: 0 auto;
        }

        /* Immediate Access */
        .access-section {
            margin: 32px auto 0;
            max-width: 1000px;
        }
        .access-title {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: var(--accent-bright);
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: 1px solid rgba(0, 220, 130, 0.3);
            background: rgba(0, 220, 130, 0.08);
            padding: 8px 14px;
            border-radius: 999px;
            margin-bottom: 32px;
        }
        .access-emoji {
            filter: drop-shadow(0 0 8px rgba(0, 220, 130, 0.3));
            display: inline-flex;
            align-items: center;
            line-height: 0;
        }
        .access-emoji svg {
            display: block;
            width: 18px;
            height: 18px;
        }
        .access-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 48px;
            justify-items: center;
        }
        .access-card {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 12px;
            padding: 24px;
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 16px;
            overflow: hidden;
            transition:
                transform 0.25s ease,
                border-color 0.25s ease,
                box-shadow 0.25s ease;
            width: min(980px, 100%);
        }
        /* add extra vertical separation between consecutive cards */
        .access-card + .access-card {
            margin-top: 24px;
        }
        /* extra space under the first card specifically */
        .access-grid .access-card:first-child {
            margin-bottom: 12px;
        }
        .access-card::before {
            content: "";
            position: absolute;
            inset: -1px;
            border-radius: 16px;
            padding: 1px;
            background: linear-gradient(
                135deg,
                rgba(0, 220, 130, 0.35),
                rgba(0, 245, 147, 0.12)
            );
            -webkit-mask:
                linear-gradient(#000 0 0) content-box,
                linear-gradient(#000 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
            opacity: 0.4;
        }
        .access-card:hover {
            transform: translateY(-3px);
            border-color: rgba(0, 220, 130, 0.35);
            box-shadow:
                0 16px 40px rgba(0, 0, 0, 0.35),
                0 0 24px rgba(0, 220, 130, 0.12);
        }
        .access-number {
            display: grid;
            place-items: center;
            width: 28px;
            height: 28px;
            border-radius: 8px;
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-bright) 100%
            );
            color: #000;
            font-weight: 900;
            font-size: 14px;
            box-shadow: 0 6px 18px rgba(0, 220, 130, 0.35);
        }
        .access-heading {
            color: #fff;
            font-size: 20px;
            margin: 0 0 6px 0;
        }
        .access-text {
            color: rgba(255, 255, 255, 0.75);
            margin: 0 0 10px 0;
            line-height: 1.5;
            font-size: 16px;
            max-width: 56ch;
        }
        .access-content {
            text-align: center;
        }
        .access-cta {
            color: #000;
            background: linear-gradient(
                135deg,
                var(--accent) 0%,
                var(--accent-bright) 100%
            );
            padding: 12px 16px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 700; /* align with offre-speciale */
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-family: inherit;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            box-shadow: 0 10px 28px rgba(0, 220, 130, 0.3);
            transition:
                transform 0.2s ease,
                box-shadow 0.2s ease;
        }
        .access-cta:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 36px rgba(0, 220, 130, 0.4);
        }
        .access-cta svg {
            transition: transform 0.2s ease;
        }
        .access-cta:hover svg {
            transform: translateX(3px);
        }

        /* Next Steps Grid */
        .next-steps-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
            margin-top: 40px;
        }

        .next-step-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
