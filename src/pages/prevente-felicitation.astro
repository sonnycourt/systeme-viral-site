                                        max="100"
                                        step="0.1"
                                        value="0"
                                        aria-label="Progression"
                                    />
                                    <input
                                        class="volume"
                                        id="felVolume"
                                        type="range"
                                        min="0"
                                        max="1"
                                        step="0.01"
                                        value="1"
