---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

// GÃ©nÃ©rer les chemins pour tous les articles
export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// RÃ©cupÃ©rer les autres articles pour la section "Articles similaires"
const allPosts = await getCollection("blog");
const relatedPosts = allPosts.filter((p) => p.slug !== post.slug).slice(0, 2); // Prendre maximum 2 articles similaires
---

<Layout title={post.data.title} description={post.data.description}>
    <div class="article-page">
        <!-- Background effects -->
        <div class="gradient-bg"></div>

        <!-- Hero Section -->
        <section class="article-hero">
            <div class="container">
                <div class="article-meta">
                    <span class="category-tag">{post.data.category}</span>
                    <span class="date"
                        >{
                            post.data.pubDate.toLocaleDateString("fr-FR", {
                                day: "2-digit",
                                month: "long",
                                year: "numeric",
                            })
                        }</span
                    >
                    <span class="author">Par {post.data.author}</span>
                    {
                        post.data.readTime && (
                            <span class="read-time">
                                ðŸ“– {post.data.readTime} min de lecture
                            </span>
                        )
                    }
                </div>

                <h1
                    class="article-title"
                    style="color: #ffffff !important; background: none !important; background-image: none !important; -webkit-background-clip: unset !important; -webkit-text-fill-color: #ffffff !important; background-clip: unset !important;"
                >
                    {
                        post.data.title.startsWith("7 Erreurs") ||
                        post.data.title.startsWith("7 erreurs") ? (
                            <>
                                <span style="color: #00DC82 !important; -webkit-text-fill-color: #00DC82 !important;">
                                    7 Erreurs qui tuent ton Business en ligne
                                </span>{" "}
                                {post.data.title
                                    .replace(
                                        /^7 [Ee]rreurs qui tuent ton [Bb]usiness en ligne/i,
                                        "",
                                    )
                                    .trim()}
                            </>
                        ) : (
                            post.data.title
                        )
                    }
                </h1>

                {
                    post.data.heroImage && (
                        <div class="hero-image">
                            <img
                                src={post.data.heroImage}
                                alt={post.data.title}
                            />
                        </div>
                    )
                }
            </div>
        </section>

        <!-- Article Content -->
        <section class="article-content">
            <div class="container">
                <div class="content-wrapper">
                    <Content />
                </div>
            </div>
        </section>

        <!-- Related Articles Section -->
        {
            relatedPosts.length > 0 && (
                <section class="related-articles">
                    <div class="container">
                        <h2 class="section-title">Articles similaires</h2>
                        <div class="related-grid">
                            {relatedPosts.map((relatedPost) => (
                                <a
                                    href={`/blog/${relatedPost.slug}`}
                                    class="related-card"
                                >
                                    <div class="related-image">
                                        <svg
                                            width="40"
                                            height="40"
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z" />
                                        </svg>
                                    </div>
                                    <div class="related-content">
                                        <h3>{relatedPost.data.title}</h3>
                                        <p>{relatedPost.data.description}</p>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </section>
            )
        }
    </div>
</Layout>

<style>
    /* RÃˆGLES PRIORITAIRES - FORCER LE BLANC SUR LES TITRES DU BLOG */
    .article-page h1.article-title,
    .article-page .article-hero h1.article-title,
    .article-page .article-hero .article-title,
    .article-hero h1.article-title,
    .article-hero .article-title {
        color: #ffffff !important;
        background: none !important;
        background-image: none !important;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: #ffffff !important;
        background-clip: unset !important;
    }

    .article-page {
        min-height: 100vh;
        padding-top: 100px;
        position: relative;
        z-index: 10;
    }

    .gradient-bg {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #0a0a0a;
        z-index: 0;
    }

    .article-hero {
        max-width: 900px;
        margin: 0 auto;
        padding: 60px 40px 40px;
    }

    .article-meta {
        display: flex;
        gap: 16px;
        margin-bottom: 24px;
        align-items: center;
        flex-wrap: wrap;
    }

    .category-tag {
        background: rgba(0, 220, 130, 0.1);
        color: var(--accent);
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
    }

    .date,
    .author,
    .read-time {
        color: var(--text-secondary);
        font-size: 14px;
    }

    /* RÃ¨gles spÃ©cifiques pour les titres du blog - Forcer le blanc */
    .article-page h1,
    .article-page .article-title,
    .article-hero h1,
    .article-hero .article-title {
        color: #ffffff !important;
        background: none !important;
        background-image: none !important;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: #ffffff !important;
        background-clip: unset !important;
    }

    .article-title {
        font-size: clamp(32px, 6vw, 48px);
        font-weight: 900;
        line-height: 1.2;
        margin-bottom: 30px;
        letter-spacing: -0.02em;
        color: #ffffff !important;
        background: none !important;
        background-image: none !important;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: #ffffff !important;
        background-clip: unset !important;
    }

    /* Garder la couleur verte pour "7 Erreurs" dans les titres */
    .article-title span {
        color: #00dc82 !important;
        -webkit-text-fill-color: #00dc82 !important;
    }

    .hero-image {
        margin-top: 30px;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid var(--border);
    }

    .hero-image img {
        width: 100%;
        height: auto;
        display: block;
    }

    .article-content {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 40px 80px;
    }

    .content-wrapper {
        background: #1a1a1a;
        border-radius: 24px;
        padding: 60px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    /* Styles pour le contenu Markdown */
    .content-wrapper :global(a) {
        display: inline-block;
        background: linear-gradient(135deg, #00dc82 0%, #00b870 100%);
        color: #000 !important;
        text-decoration: none !important;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        text-align: center;
        margin: 8px 0;
        line-height: 1.5;
    }

    .content-wrapper :global(a:hover) {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 220, 130, 0.3);
        background: linear-gradient(135deg, #00b870 0%, #00dc82 100%);
    }

    .article-content a {
        display: inline-block;
        background: linear-gradient(135deg, #00dc82 0%, #00b870 100%);
        color: #000 !important;
        text-decoration: none !important;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        text-align: center;
        margin: 8px 0;
    }

    .article-content a:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 220, 130, 0.3);
        background: linear-gradient(135deg, #00b870 0%, #00dc82 100%);
    }

    /* Styles pour le contenu Markdown */
    .content-wrapper :global(h1) {
        font-size: 32px;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 24px;
        margin-top: 40px;
    }

    .content-wrapper :global(h2) {
        font-size: 24px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 20px;
        margin-top: 32px;
    }

    .content-wrapper :global(h3) {
        font-size: 20px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 16px;
        margin-top: 24px;
    }

    .content-wrapper :global(p) {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.7;
        margin-bottom: 16px;
    }

    .content-wrapper :global(ul),
    .content-wrapper :global(ol) {
        margin-bottom: 20px;
        padding-left: 20px;
    }

    .content-wrapper :global(li) {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.6;
        margin-bottom: 8px;
    }

    .content-wrapper :global(strong) {
        color: #ffffff;
        font-weight: 600;
    }

    .content-wrapper :global(em) {
        color: rgba(255, 255, 255, 0.7);
        font-style: italic;
    }

    .content-wrapper :global(blockquote) {
        border-left: 4px solid #00dc82;
        padding-left: 20px;
        margin: 24px 0;
        font-style: italic;
        color: rgba(255, 255, 255, 0.8);
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border-radius: 0 12px 12px 0;
    }

    /* Liens dans les blockquotes : liens simples verts */
    .content-wrapper :global(blockquote a) {
        display: inline;
        background: none !important;
        color: #00dc82 !important;
        text-decoration: underline !important;
        padding: 0 !important;
        border-radius: 0 !important;
        font-weight: 600 !important;
        font-size: inherit !important;
        transition: all 0.2s ease !important;
        border: none !important;
        cursor: pointer !important;
        text-align: left !important;
        margin: 0 !important;
        line-height: inherit !important;
    }

    .content-wrapper :global(blockquote a:hover) {
        transform: none !important;
        box-shadow: none !important;
        background: none !important;
        color: #00b870 !important;
        text-decoration: underline !important;
    }

    .content-wrapper :global(code) {
        background: rgba(0, 220, 130, 0.2);
        color: #00dc82;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 14px;
    }

    .content-wrapper :global(pre) {
        background: #0a0a0a;
        padding: 20px;
        border-radius: 12px;
        overflow-x: auto;
        margin: 20px 0;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .content-wrapper :global(pre code) {
        background: none;
        color: rgba(255, 255, 255, 0.8);
        padding: 0;
    }

    .related-articles {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px 80px;
    }

    .section-title {
        font-size: 32px;
        font-weight: 700;
        color: var(--text);
        margin-bottom: 40px;
        text-align: center;
    }

    .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
    }

    .related-card {
        background: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 24px;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        display: block;
        color: inherit;
    }

    .related-card:hover {
        background: var(--bg-elevated);
        transform: translateY(-2px);
        border-color: rgba(0, 220, 130, 0.3);
        box-shadow: 0 8px 24px rgba(0, 220, 130, 0.1);
    }

    .related-image {
        width: 60px;
        height: 60px;
        background: rgba(0, 220, 130, 0.1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--accent);
        margin-bottom: 16px;
    }

    .related-content h3 {
        font-size: 18px;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 8px;
    }

    .related-content p {
        font-size: 14px;
        color: var(--text-secondary);
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .article-hero {
            padding: 40px 20px 30px;
        }

        .article-title {
            font-size: 28px;
            line-height: 1.3;
            color: #ffffff !important;
            background: none !important;
            -webkit-background-clip: unset !important;
            -webkit-text-fill-color: #ffffff !important;
            background-clip: unset !important;
        }

        .article-content {
            padding: 0 20px 60px;
        }

        .content-wrapper {
            padding: 40px 30px;
        }

        .content-wrapper :global(h1) {
            font-size: 28px;
        }

        .content-wrapper :global(h2) {
            font-size: 22px;
        }

        .content-wrapper :global(h3) {
            font-size: 18px;
        }

        .content-wrapper :global(p),
        .content-wrapper :global(li) {
            font-size: 15px;
        }

        .related-articles {
            padding: 0 20px 60px;
        }

        .related-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 480px) {
        .content-wrapper {
            padding: 30px 20px;
        }

        .content-wrapper :global(h1) {
            font-size: 24px;
        }

        .content-wrapper :global(h2) {
            font-size: 20px;
        }

        .content-wrapper :global(h3) {
            font-size: 16px;
        }

        .content-wrapper :global(p),
        .content-wrapper :global(li) {
            font-size: 14px;
        }

        .related-articles {
            padding: 0 15px 40px;
        }
    }
</style>
