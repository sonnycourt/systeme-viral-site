<style>
    .footer {
        background: var(--bg-elevated);
        border-top: 1px solid var(--border);
        padding: 60px 0 30px;
        margin-top: 80px;
    }

    .footer-content {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 40px;
        margin-bottom: 40px;
    }

    .footer-brand {
        font-size: 24px;
        font-weight: 800;
        letter-spacing: -0.5px;
        background: linear-gradient(
            135deg,
            var(--accent) 0%,
            var(--accent-glow) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 16px;
    }

    .footer-text {
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 24px;
        max-width: 400px;
    }

    .footer-links h3 {
        color: var(--text);
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .footer-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-links li {
        margin-bottom: 8px;
    }

    .footer-links a {
        color: var(--text-secondary);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .footer-links a:hover {
        color: var(--accent);
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .footer {
            padding: 40px 0 20px;
        }
    }
</style>
